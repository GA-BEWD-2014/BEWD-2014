<%= form_for @shirt do |f| %>
    <fieldset>
        <div class='fields'>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>
        <div class='fields'>
            <%= f.label :description %>
            <%= f.text_field :description %>
        </div>
        <div class='fields'>
            <%= f.label :image %>
            <%= f.text_field :image %>
        </div>
    </fieldset>
    <%= f.submit %>
<% end %>