<h1>Stuff Finder!</h1>
<p>Your place for finding stuff you want, and dumping stuff you don't</p>
<%= link_to "Create a new classified!", new_classified_path %>
<section>
  <% @categories.each do |category| %>
    <article>
      <section>
        <%= link_to category.name, category %>
        <header>
          <% category.recent_classifieds.each do |classified| %>
          </header>
          <article>
            <%= link_to "#{truncate(classified.title)} - #{classified.price}", classified %>
          </article>
        <% end %>
      </section>
    </article>
  <% end %>
</section>
