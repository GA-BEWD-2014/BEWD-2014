<section>
  <h2>Classifieds</h2>

  <br/>

  <% @categories.each do |category| %>
    <article>
      <section class="well well-small">
        <ul class="nav nav-list">
          <li class="nav-header"><%= link_to category.name, category %></li>
          <header>
            <% category.recent_classifieds.each do |classified| %>
            </header>
            <article>
              <li><%= link_to "#{truncate(classified.title)} - #{number_to_currency classified.price}", classified %></li>
            </article>
          <% end %>
        </ul>
      </section>
    </article>
  <% end %>
</section>
<%= content_for(:sidebar) do %>
  <section class="well">
    <ul class="nav nav-list">
      <li class="nav-header">Categories</li>
    <% @categories.each do |category| %>
      <li><%= link_to category.name, category %></li>
    <% end %>
  </ul>
<% end %>
