<h1>Add a classified</h1>
<%= form_for @classified do |f| %>
  <%= label_tag :category %>
  <%= text_field_tag :category %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.number_field :price, :size => 5, :value => 0, :step => 0.01, :min => 0 %>
  <%= f.submit %>
<% end %>
